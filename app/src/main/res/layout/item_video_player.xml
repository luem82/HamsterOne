<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Bà Dương Thị Bạch Diệp: Hợp đồng công chứng nhà 57 Cao Thắng là giả"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/media_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="8dp"
        android:background="#000"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_video_title">

        <ImageView
            android:id="@+id/iv_video_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:src="@android:color/white" />

        <ProgressBar
            android:id="@+id/pb_video"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_video_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="8dp"
            android:background="#7F000000"
            android:padding="4dp"
            android:text="Review"
            android:textColor="@android:color/white" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_video_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="89%" />

        <TextView
            android:id="@+id/tv_video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_video_like"
            android:drawableLeft="@drawable/ic_visibility_black_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="43,944" />


        <TextView
            android:id="@+id/tv_video_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/tv_video_bookmark"
            android:background="@drawable/backgfound_tv_video_player"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:drawablePadding="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Full"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_video_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/backgfound_tv_video_player"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_bookmark_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorAccent"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Add"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>